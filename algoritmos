algoritmo "AnalisadorDeValores"
var
  C, V, S, Di5, Nul, SomP: inteiro
  M: real
inicio
      S <- 0
      Di5 <- 0
      Nul <- 0
      SomP <- 0
      Para C := 1 ate 5 faca
           EscrevaL("Digite o ", C, "o. valor: ")
           Leia(V)
           S <- S + V
           Se (V%5=0) entao
              Di5 <- Di5 + 1
           FimSe
           Se (V=0) entao
              Nul <- Nul +1
           FimSe
           Se (V%2=0) entao
              SomP <- SomP + V
           FimSe
      FimPara
      M <- S/(C-1)
      EscrevaL("A soma entre os valores é: ", S)
      EscrevaL("A média entre os valores é: ", M:5:1)
      EscrevaL("Valores divisiveis por 5: ", Di5)
      EscrevaL("Valores nulos: ", Nul)
      EscrevaL("A soma dos valores pares é: ", SomP)
fimalgoritmo
