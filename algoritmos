- Aula 12 (Curso em vídeo) - Procedimentos
algoritmo "MaisPesado"
var
   I: inteiro
   O, Pes: caractere
   P, Mai: real
Procedimento Topo()
inicio
      LimpaTela
      EscrevaL("---------------------------------------")
      EscrevaL("---- D E T E C T O R  D E  P E S O ----")
      EscrevaL("   O objeto mais pesado pesa, ", Mai, "Kg")
      EscrevaL("---------------------------------------")
FimProcedimento
inicio
      Topo()
      Para I := 1 ate 5 faca
           Escreva("Digite o objeto: ")
           Leia(O)
           Escreva("Digite o peso do ", O, ": ")
           Leia(P)
           Se (P>Mai) entao
              Mai <- P
              Pes <- O
           FimSe
           Topo()
      FimPara
      Topo()
      EscrevaL("O objeto mais pesado foi: ", Pes, ", com ", Mai, "Kg.")
fimalgoritmo
