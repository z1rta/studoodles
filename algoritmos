    Se (V%2=0)entao
       Retorne "PAR"
    senao
       Retorne "IMPAR"
    fimse
fimfuncao
inicio
      Escreva("Digite um número: ")
      Leia(N)
      R <- ParOuImpar(N)
      Escreva("O número ", N, " é um valor ", R)
