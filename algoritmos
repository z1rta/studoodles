algoritmo "media"
var
nomeA: caractere
P1, P2, M: real
inicio
Escreval("-------------------------")
Escreval("-----ESCOLA RORAIMAR-----")
Escreval("-------------------------")
Escreval("                   ")
Escreval("-------------------------")
Escreva("Digite o nome do aluno: ")
Leia(nomeA)
Escreva("Digite a nota da P1 de ", nomeA, ": ")
Leia(P1)
Escreva("Digite a nota da P2 de ", nomeA, ": ")
Leia(P2)
M <- (P1+P2)/2
Escreval("                   ")
Escreval("-------------------------")
Escreval("MÉDIA: ", M)
Se (M >=7) entao
   Escreval(nomeA, ", ESTA APROVADX!")
senao
   Escreval(nomeA, ", ESTA REPROVADX!")
FimSe
Escreval("-------------------------")
