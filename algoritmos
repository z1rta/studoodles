algoritmo "FunFatorial"
var
N,F: inteiro
funcao Fatorial(V: inteiro) : inteiro
var C,R: inteiro
inicio
   R <- 1
   Para C := 1 ate V faca
       R<- R*C
   Fimpara
   Retorne R
fimfuncao
inicio
      Escreva("Digite um número: ")
      Leia(N)
      F <- Fatorial(N)
      EscrevaL("O valor de ",N,"! é igual a ", F)
fimalgoritmo
