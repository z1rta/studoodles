algoritmo "AptoDirigir"
var
anoA, anoN, ID: inteiro
inicio
Escreval("-----------------------")
Escreval("-----ESCOLA RODAPÉ-----")
Escreval("-----------------------")
Escreval("                   ")
Escreval("-----------------------")
Escreva("Ano atual (yyyy): ")
Leia(anoA)
Escreva("Ano de nascimento (yyyy): ")
Leia(anoN)
ID <- anoA - anoN
Escreval("                   ")
Escreval("--------STATUS--------")
EscrevaL("IDADE: ", ID, " ANOS.")
Se (ID > 18) entao
   EscrevaL("APTO A TIRAR A CARTA.")
senao
   EscrevaL("INAPTO A TIRAR A CARTA.")
FimSe
Escreval("-----------------------")
