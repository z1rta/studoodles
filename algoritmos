algoritmo "FunFibonacci"
var
  C, T1, T2, T3: inteiro
funcao ProximoFibonacci(var N1, N2: inteiro):inteiro
var
N3: inteiro
inicio
    N3 := N1 + N2
    N1 := N2
    N2 := N3
    Retorne N3
fimfuncao
inicio
      T1 <- 0
      Escreval(T1)
      T2 <- 1
      Escreval(T2)
      Para C := 3 ate 10 faca
           T3 <- ProximoFibonacci(T1, T2)
           EscrevaL(T3)
      FimPara
fimalgoritmo

- **FUNÇÕES PRÉ DEFINIDAS - VISUALG
SITE: "BancoDeDados"

Compr(Site)  12
Copia(Site, 6, 2)  De
Maiusc(Site)  BANCODEDADOS
Minusc(Site)  bancodedados
Pos("Dados", Site)  8
Asc("b")  98 - código da letra
Asc("B")  66
Asc("C")  67
Carac(67)  C

algoritmo "AnalisadoStrings"
var
N: caractere
C: inteiro
inicio
   Escreva("Digite seu nome: ")
   Leia(N)
   EscrevaL("Total de letras do seu nome: ", Compr(N))
   EscrevaL("Seu nome em maiusculo: ", Maiusc(N))
   EscrevaL("Seu nome em minusculo: ", Minusc(N))
   EscrevaL("A primeira letra do seu nome é: ", Copia(N, 1,1))
   EscrevaL("A ultima letra do seu nome é: ", Copia(Maiusc(N), Compr(N), 1))
   EscrevaL("Posição da letra A no seu nome: ", Pos("A", Maiusc(N)))
   EscrevaL("O código da letra B é: ", Asc("B"))
   EscrevaL("O numero 43 se refere ao caractere ", Carac(43))
   
   Para C <- Compr(N) ate 1 passo -1 faca
      Escreva(Copia(Maiusc(N), C,1))
   FimPara
fimalgoritmo
