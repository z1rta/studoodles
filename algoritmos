algoritmo "QuantosDe0a10"
var
   C, V, Tot010, SImp: inteiro
inicio
      Tot010 <- 0
      SImp <- 0
      Para C <- 1 ate 6 faca
           Escreva("Digite um valor: ")
           Leia(V)
           Se (V >=0) e (V <=10) entao
              Tot010 <- Tot010 + 1
              Se (V>10)e(V%2=1) entao
                 SImp <- SImp + V
              FimSe
           FimSe
      FimPara
      EscrevaL("Ao todo foram ", Tot010, " valores entre 0 e 10.")
      EscrevaL("A soma de impares foi ", SImp,".")
